{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "src",
    "paths": {
      "@libs/*": [
        "libs/*"
      ],
      "@util": [
        "util/index.ts"
      ],
      "@components/*": [
        "libs/components/*"
      ],
      "@layout/*": [
        "libs/layout/*"
      ],
      "@util/*": [
        "libs/util/*"
      ],
      "@types": [
        "types/index.ts"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": [
    "node_modules"
  ],
}